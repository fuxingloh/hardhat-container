{
  "name": "hardhat-container",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "url": "git+https://github.com/fuxingloh/hardhat-container"
  },
  "license": "MPL-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:docker": "docker build --tag docker.io/fuxingloh/hardhat-container:2.19.4 .",
    "clean": "tsc --build --clean",
    "lint": "eslint .",
    "test": "jest --passWithNoTests"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "@workspace/jest-preset"
  },
  "dependencies": {
    "hardhat": "2.19.4"
  },
  "devDependencies": {
    "@workspace/jest-preset": "workspace:*",
    "@workspace/tsconfig": "workspace:*"
  }
}
