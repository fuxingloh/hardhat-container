{
  "name": "hardhat-container",
  "version": "0.0.0",
  "private": true,
  "license": "MPL-2.0",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:docker": "docker build -t ghcr.io/fuxingloh/hardhat-container:$(node -p \"require('./package.json').dependencies.hardhat\") -f Dockerfile ../../",
    "clean": "tsc --build --clean",
    "lint": "eslint .",
    "push:docker": "docker buildx build -t ghcr.io/fuxingloh/hardhat-container:$(node -p \"require('./package.json').dependencies.hardhat\") -f Dockerfile ../../ --output type=registry  --platform linux/amd64,linux/arm64"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "hardhat": "2.22.1"
  },
  "devDependencies": {
    "@workspace/tsconfig": "workspace:*"
  }
}
